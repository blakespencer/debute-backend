{
  "name": "debute-backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern='test/unit'",
    "test:integration": "jest --testPathPattern='test/integration'",
    "test:integration:docker": "docker compose exec app env NODE_ENV=test npm run test:integration -- --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:integration": "docker compose exec app env NODE_ENV=test npm run test:coverage -- --testPathPattern='test/integration'",
    "prisma:generate": "dotenv -e .env -- npx prisma generate",
    "prisma:migrate": "dotenv -e .env -- npx prisma migrate dev",
    "prisma:migrate:status": "dotenv -e .env -- npx prisma migrate status",
    "prisma:migrate:deploy": "dotenv -e .env -- npx prisma migrate deploy",
    "prisma:studio": "dotenv -e .env -- npx prisma studio",
    "prisma:seed": "dotenv -e .env -- ts-node prisma/seed.ts",
    "prisma:reset": "dotenv -e .env -- npx prisma migrate reset",
    "migrate:docker": "./scripts/migrate-docker.sh",
    "validate:schema": "node scripts/validate-schema.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "shopify:mcp": "npx -y @shopify/dev-mcp@latest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/client": "^6.16.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.4.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.35.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.16.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
